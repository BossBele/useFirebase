{
  "name": "firebomb",
  "version": "2.0.25-beta",
  "description": "Lightweight and Optimal way to use firebase in React.",
  "author": "BossBele",
  "license": "MIT",
  "repository": "BossBele/firebomb",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsc --build",
    "prepublishOnly": "rimraf dist && yarn build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "react": "^16.0.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.0.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react-scripts": "^4.0.3",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@boiseitguru/cookie-cutter": "^0.2.3",
    "dotenv": "^16.4.5",
    "firebase": "^11.0.2",
    "firebase-admin": "^13.0.1"
  },
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./admin": {
      "types": "./dist/admin/index.d.ts",
      "require": "./dist/admin/index.js",
      "import": "./dist/admin/index.js",
      "default": "./dist/admin/index.js"
    },
    "./web": {
      "types": "./dist/web/index.d.ts",
      "require": "./dist/web/index.js",
      "import": "./dist/web/index.js",
      "default": "./dist/web/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ],
      "admin": [
        "./dist/admin/index.d.ts"
      ],
      "web": [
        "./dist/web/index.d.ts"
      ]
    }
  }
}