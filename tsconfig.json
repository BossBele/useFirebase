{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "jsx": "react",
    "skipLibCheck": true,
    "moduleResolution": "node",
    // Additional recommended settings for React
    "allowJs": true,                    // Allow JavaScript files to be compiled
    "forceConsistentCasingInFileNames": true,  // Ensure consistent casing in imports
    "isolatedModules": true,            // Better compatibility with babel
    "resolveJsonModule": true,          // Allow importing JSON files
    "sourceMap": true,                  // Generate source maps for debugging
    "declarationMap": true,
    // Update lib to include additional necessary APIs
    "lib": [
      "es2019",
      "dom",
      "dom.iterable",
      "esnext"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
